% #1 When
% #2 What
% #3 Who
% #4 Details
\newcommand{\cvevent}[4]
{%
  \vspace{4pt}
  \textbf{#2} 
  \hfill
  \textcolor{accent1}{\ffslim\textbf{#1}} \\
  \textcolor{darkaccent}{#3} \\
  {\small #4}
  \vspace{4pt}
}

\newcommand{\projlink}[1]{%
  \href{#1}{VISIT} \includegraphics[width=1em]{../img/external-link-symbol}
}

\newcommand{\taglist}[1]{%
  \textcolor{accent1}{#1}
}

\newcommand{\projectrole}[1]{%
  \textcolor{accent2}{#1}
}

\newcommand{\aboutme}[1]{%
  \setlength\fboxsep{10pt}
  \begin{tcolorbox}[oversize,
    sharp corners,
    colback=darkbg,
    colframe=darkbg,
    left=.5in,
    right=.5in]
    \begin{minipage}[t]{.96\linewidth}
      #1
    \end{minipage}
  \end{tcolorbox}
}
