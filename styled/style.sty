%----------------------------------------------------------------------------------------
% Title Style
%----------------------------------------------------------------------------------------

\titleformat*{\section}{\raggedright\large\ffslim\color{darkgreyaccent}\uppercase}
\titlespacing*{\section}{2pt}{20pt}{-2.5pt}
\titleformat*{\subsection}{\raggedright\normalsize\ffslim\color{greyaccent}}
\titlespacing*{\subsection}{2pt}{3pt}{2pt}

